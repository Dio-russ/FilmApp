<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body style="background-image: url(https://searchthisweb.com/wallpaper/curtains_3200x2000_7zixw.jpg);" >
    <!--меню-->
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid" style="justify-content:center">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Переключатель навигации">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01" style="justify-content:space-between">
                <a class="navbar-brand" href="/">FilmApp</a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="justify-content:right;width:78%">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account" class="nav-link active" aria-current="page">Регистрация</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account" class="nav-link">Войти</a>
                        </li>
                    }
                    else
                    {
                        <form asp-area="" asp-controller="Account" asp-action="Logout" class="dropdown-item" style="margin-top: 7px;">
                            <button type="submit" class="btn btn-link navbar-btn navbar-link"> Выход </button>
                        </form>
                        <li class="nav-item" style="margin-top: 20px;">
                            <p style="color:#007BFF">@User.Identity.Name</p>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ShowMyFilms" asp-controller="Home" class="nav-link">Мои фильмы</a>
                        </li>
                    }
                </ul>
                <form asp-action="Search" class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Поиск" name="searchString">
                    <button class="btn btn-outline-success" type="submit">Поиск</button>
                </form>
            </div>
        </div>
    </nav>
    <!--основной контент-->
    <div class="container body-content" style="margin-top:20px; display: flex;flex-direction: column;align-items: center;">
        @RenderBody()
        <hr />
    </div>
</body>
</html>